#post
  h1
    line-height 1.4em
    margin-top 2em
    font-size 2em
    @media(max-width: 750px)
      font-size 1.5em

  h2
    line-height 1.4em
    margin 1.5em 0 .3em
    font-size 1.4em
    @media(max-width: 750px)
      font-size 1.2em

    time
      margin-bottom 2em
      padding-left 1em
      display inline
      font-size .5em
      font-weight normal

  code
    font-size .9em
    @media(max-width: 750px)
      font-size .8em

  li
    margin .3em 0

  img
    @media(max-width: 750px)
      height 85%
      width 85%

.back-to-index
  margin-top 4em

.fa-tags
  margin 0 5px
.fa-calendar
  margin-right 5px
.time-tags
  font-size .8em
  margin-bottom 4em
  time
    margin-right 1em
