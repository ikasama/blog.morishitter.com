@import '_settings'

normalize()
base()

// base styles on everything, for prototyping
framework()

html
  font-size: 6.25%
body
  //border-top: .5em solid turquoise
  //background-color: #f2f2f2
  font-size: 16em
  line-height: 1.4em

p
  font-size: 1em

header
  background: blue
  width: 100%
  text-align: center
  font-family: 'Open Sans', sans-serif

  h1
    color: white
    padding-top: 2em
    font-weight: 300
    font-size: 3em
