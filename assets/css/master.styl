@import '_settings'

normalize()
base()

// base styles on everything, for prototyping
framework()

html
  font-size: 6.25%

body
  font-size: 16em
  line-height: 1.4em

p
  font-size: 1em

header
  background: blue
  width: 100%
  text-align: center
  font-family: 'Open Sans', sans-serif

  h1
    color: white
    padding-top: 2em
    font-weight: 300
    font-size: 2.5em
    @media(max-width: 992px)
      padding-top: 1em
    a, a:hover
        color: white
        border-bottom-width: 0
  p
    color: white
    padding-bottom: 5em
    font-size: 1.2em
    @media(max-width: 992px)
      padding-bottom: 2.5em

#main
  padding: 1em

#posts
  reset-list()
  margin: 5em auto
  @media(min-width: 992px)
    padding 0 2em

  h1
    //margin-bottom: 2em
    line-height: 1.4em

  h2
    line-height: 1.4em
    margin: 1em 0 .3em
    font-size: 1.4em

    time
      margin-bottom: 2em
      padding-left: 1em
      display: inline
      font-size: .5em
      font-weight: normal

  li
    margin: 1em 0
    fs: 1.5em
    line-height: 1.4em


#post
  h1
    //margin-bottom: 2em
    line-height: 1.4em
    margin-top: 2em
    font-size: 2em
    @media(max-width: 992px)
      font-size: 1.5em

  h2
    line-height: 1.4em
    margin: 1.5em 0 .3em
    font-size: 1.4em
    @media(max-width: 992px)
      font-size: 1.2em

    time
      margin-bottom: 2em
      padding-left: 1em
      display: inline
      font-size: .5em
      font-weight: normal

  code
    font-size: .9em
    @media(max-width: 992px)
      font-size: .8em

  li
    margin: .3em 0

  img
    @media(max-width: 768px)
      height: 85%
      width: 85%

.back-to-index
  margin-top: 4em

.fa-tags
  margin: 0 5px
.fa-calendar
  margin-right: 5px
.time-tags
  font-size: .8em
  margin-bottom: 4em
  time
    margin-right: 1em

footer
  margin: 5em 0
  font-family: 'Open Sans', sans-serif
  font-size: 1em
  @media(max-width: 992px)
    font-size: .8em
